{
  "name": "root",
  "version": "1.2.1",
  "private": true,
  "description": "Proofdict is a collection of dictionary.",
  "keywords": [
    "dict"
  ],
  "homepage": "https://github.com/proofdict/proofdict",
  "bugs": {
    "url": "https://github.com/proofdict/proofdict/issues"
  },
  "license": "MIT",
  "author": "azu",
  "repository": {
    "type": "git",
    "url": "https://github.com/proofdict/proofdict.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --ignore website --ignore @proofdict/editor",
    "clean": "lerna run clean",
    "website": "lerna run build --scope website --scope @proofdict/editor && cp -rf ./packages/@proofdict/editor/build ./website/build/proofdict/editor",
    "prepublish": "yarn run clean && yarn run build",
    "publish": "lerna publish --conventional-commits",
    "test": "lerna run test",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css}'"
  },
  "dependencies": {},
  "devDependencies": {
    "@alrra/travis-scripts": "^3.0.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4
  },
  "workspaces": {
    "packages": [
      "packages/@proofdict/*",
      "website"
    ],
    "nohoist": [
      "**/@types/mocha",
      "**/@types/mocha/**",
      "**/@types/jest",
      "**/@types/jest/**"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git reset",
      "pre-commit": "lint-staged"
    }
  }
}
